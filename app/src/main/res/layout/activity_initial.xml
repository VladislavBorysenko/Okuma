<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/backgrey"
            >


            <Button
                android:id="@+id/bntAlarm00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="click"
                android:layout_margin="8dp"
                android:background="@drawable/btn_shape_capsule"
                android:textSize="16dp"
                android:padding="16dp"
                android:text="Alarm-00" />




            <Button
                android:id="@+id/bntAlarmA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/btn_shape_capsule"
                android:padding="16dp"
                android:textSize="16dp"
                android:onClick="click"
                android:text="Alarm-1000" />

            <Button
                android:id="@+id/bntAlarmB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/btn_shape_capsule"
                android:padding="16dp"
                android:textSize="16dp"
                android:onClick="click"
                android:text="Alarm-2000" />

            <Button
                android:id="@+id/bntAlarmC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
