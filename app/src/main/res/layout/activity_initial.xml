                android:textSize="16dp"
                android:onClick="click"
                android:text="Alarm-8000" />

            <Button
            android:id="@+id/bntAlarm98"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/btn_shape_capsule"
            android:padding="8dp"
            android:textSize="16dp"
            android:onClick="click"
            android:text="Alarm-9000" />

            <Button
                android:id="@+id/bntAlarm85000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/btn_shape_capsule"
                android:padding="8dp"
                android:textSize="16dp"
                android:onClick="click"
                android:text="Alarm-85000" />

            <Button
                android:id="@+id/bntAlarm90000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/btn_shape_capsule"
